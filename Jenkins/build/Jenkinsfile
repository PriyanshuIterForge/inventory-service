pipeline {
    agent any

    environment {
        AWS_REGION = 'ap-south-1'
        DEV_ECR = '654654263647.dkr.ecr.ap-south-1.amazonaws.com/order-service-dev'
    }

    stages {

        stage('Build App') {
            steps {
                bat 'gradlew clean build'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t order-service-dev .'
            }
        }

        stage('Login to ECR') {
            steps {
                bat 'aws ecr get-login-password --region %AWS_REGION% | docker login --username AWS --password-stdin %DEV_ECR%'
            }
        }

        stage('Tag Image') {
            steps {
                bat 'docker tag order-service-dev %DEV_ECR%:latest'
            }
        }

        stage('Push to Dev ECR') {
            steps {
                bat 'docker push %DEV_ECR%:latest'
            }
        }
    }
}