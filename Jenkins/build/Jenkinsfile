pipeline {
    agent any

    environment {
        AWS_REGION = 'ap-south-1'
        DEV_ECR = '654654263647.dkr.ecr.ap-south-1.amazonaws.com/inventory-service-dev'
    }

    stages {

        stage('Build App') {
            steps {
                bat 'gradlew clean build'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t inventory-service-dev .'
            }
        }

        stage('Login to ECR') {
            steps {
                bat 'aws ecr get-login-password --region ap-south-1 | docker login --username AWS --password-stdin 654654263647.dkr.ecr.ap-south-1.amazonaws.com'
            }
        }

        stage('Tag Image') {
            steps {
                bat 'docker tag inventory-service 654654263647.dkr.ecr.ap-south-1.amazonaws.com/inventory-service-dev:latest'
            }
        }

        stage('Push Image') {
            steps {
                bat 'docker push 654654263647.dkr.ecr.ap-south-1.amazonaws.com/inventory-service-dev:latest'
            }
        }
    }
}